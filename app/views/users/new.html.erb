<main class="page">
<header class="navbar">
    <div>
        <%= render 'shared/eventbrite_logo'%>
    </div>
    <div>
        <%= link_to "Login" , login_path,  class: "eb-btn"%>
    </div>
</header>
<div class="row m-0">
<div class="col-6 card p-5 m-5">
<h1>Get started</h1>
<br>
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control m-2'%>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control m-2'%>

    <%= f.submit 'Sign up', class: 'btn btn-primary m-2 float-right' %>
  <% end %>
  </div>
</div>
</main>