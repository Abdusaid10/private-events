<main class="page">
<header class="navbar">
    <div>
        <%= render 'shared/eventbrite_logo'%>
    </div>

    <div>
        <%= link_to "Home", root_path, class: "eb-btn"%>
    <% if logged_in? %>
        <%= link_to "Logout", logout_path, method: :delete, class: "eb-btn"%>
    <% end %>
    </div>
</header>
<div class="row m-0">
<div class="col-md-6 card p-5 m-5">
<h1>My profile</h1>
<br>
<h1><%= @user.name %></h1>
<h4><%= @user.email %></h4>
</div>
</div>

</main>

<section class="container m-5">
<h2 class="m-4">Events</h2>

        <ul class="nav nav-pills nav-fill m-5" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-upcoming-tab" data-toggle="pill" href="#pills-upcoming" role="tab" aria-controls="pills-upcoming" aria-selected="true">Upcoming events</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-past-tab" data-toggle="pill" href="#pills-past" role="tab" aria-controls="pills-past" aria-selected="false">Past events</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-created-tab" data-toggle="pill" href="#pills-created" role="tab" aria-controls="pills-created" aria-selected="false">Created events</a>
        </li>
        </ul>


    <div class="container">
        <div class="tab-content" id="pills-content-tab">
            <div class="tab-pane fade show active" id="pills-upcoming" role="tabpanel" aria-labelledby="pills-upcoming-tab">

                <%= render 'shared/list_events', {events: @upcoming_events, type: 'upcoming'} %>
        </div>
        <div class="tab-pane fade" id="pills-past" role="tabpanel" aria-labelledby="pills-past-tab">

                <%= render 'shared/list_events', {events: @past_events, type: 'past'} %>         
        </div>
        <div class="tab-pane fade" id="pills-created" role="tabpanel" aria-labelledby="pills-created-tab">

                <%= render 'shared/list_events', {events: @events, type: 'created'} %>         
        </div>
        </div>
    </div>
</section>



