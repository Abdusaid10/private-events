<% events.each do |e| %>
    <div class="card m-4">
        <div class="card-body">
            <h5 class="card-title"><%= e.title%></h5>
            <p class="card-text"><%= e.description%></p>
            <a href="#" class="btn btn-primary float-right">View</a>
        </div>
        <div class="card-footer text-muted text-right">
            <%= type == 'past' ? time_ago_in_words(e.date) : e.date %>
            <%if type == 'past'%>
            <span> ago</span>
            <%end%>    
        </div>
    </div>
<% end %>