<main class="page">
<header class="navbar">
    <div>
        <%= render 'shared/eventbrite_logo'%>
    </div>
    <div>
        <%= link_to "Home", root_path, class: "eb-btn"%>
    <% if logged_in? %>
        <%= link_to "Logout", logout_path, method: :delete, class: "eb-btn"%>
    <% end %>
    </div>
</header>
<div class="row m-0">
<div class="col-6 card p-5 m-5">
<h1><%= @event.title%></h1>
<p class="card-subtitle">by <%= @event.creator.name %></p>
<br>
<div class="card-body">
<%= @event.description %>
</div>

<div>
<%= @event.date %>
</div>
</div>
</div>
</main>



