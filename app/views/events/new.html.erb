
<div class="container row">
<div class="col-8 offset-6">
<h1 class="m-2">New event</h1>
  <%= form_for(@event) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'%>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control'%>

    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control'%>

    <%= f.label :date %>
    <%= f.text_field :date, class: 'form-control event-datepicker'%>

    <%= f.submit 'Create Events', class: 'btn btn-primary' %>
  <% end %>
</div>
</div>