
<div class="container row">
<div class="col-9 offset-3">
<h1>New event</h1>
  <%= form_for(@event) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control m-2'%>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control m-2'%>

    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control m-2'%>

    <%= f.label :date %>
    <%= f.text_field :date, class: 'form-control event-datepicker m-2'%>

    <%= f.submit 'Create Events', class: 'btn btn-primary m-2' %>
  <% end %>
</div>
</div>

